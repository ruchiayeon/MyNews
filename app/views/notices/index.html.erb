<p id="notice"><%= notice %></p>

<h1>myNews</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Writer</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>
 
  <tbody>
    <meta charset="UTF-8","euc-kr">
    <% @notices.each do |notice| %>
      <ol>
        <li>
          <td><%= notice.title ,cols: 10 %></td>
          <td><%= notice.writer, cols: 10 %></td>
          <td><%= notice.created_on, cols: 10 %></td>
          <td><%= link_to 'Show', notice %></td>
          <td><%= link_to 'Edit', edit_notice_path(notice) %></td>
          <td><%= link_to 'Destroy', notice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </li>
      </ol>
    <% end %>
  </tbody>
</table>

